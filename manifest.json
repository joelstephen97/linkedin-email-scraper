{
  "manifest_version": 3,
  "name": "LinkedIn Email Scraper",
  "version": "1.0",
  "description": "Automatically scrape emails from LinkedIn job posts.",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["https://www.linkedin.com/jobs/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"]
    }
  ]
}
